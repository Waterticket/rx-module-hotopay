<query id="updatePurchaseProducts" action="update">
	<tables>
		<table name="hotopay_purchase" />
	</tables>
	<columns>
        <column name="products" var="products" notnull="notnull" />
	</columns>
	<conditions>
		<condition operation="equal" column="purchase_srl" var="purchase_srl" notnull="notnull" />
	</conditions>
</query>