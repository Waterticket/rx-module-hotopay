<query id="updateProductExtraInfo" action="update">
    <tables>
        <table name="hotopay_product_extra_info" />
    </tables>
    <columns>
            <column name="product_srl" var="product_srl" />
            <column name="type" var="type" notnull="notnull" />
            <column name="key_name" var="key_name" notnull="notnull" />
            <column name="title" var="title" />
            <column name="description" var="description" />
            <column name="value" var="value" />
            <column name="placeholder" var="placeholder" />
            <column name="required" var="required" />
    </columns>
    <conditions>
            <condition operation="equal" column="info_srl" var="info_srl" filter="number" notnull="notnull" />
    </conditions>
</query>
