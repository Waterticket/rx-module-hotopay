<query id="insertProductOption" action="insert">
	<tables>
		<table name="hotopay_product_option" />
	</tables>
	<columns>
        <column name="option_srl" var="option_srl" notnull="notnull" />
        <column name="product_srl" var="product_srl" notnull="notnull" />
        <column name="title" var="title" notnull="notnull"/>
        <column name="description" var="description" default="" />
        <column name="price" var="price" notnull="notnull" />
        <column name="stock" var="stock" default="-1" />
        <column name="infinity_stock" var="infinity_stock" default="N" />
        <column name="billing_infinity_stock" var="billing_infinity_stock" default="N" />
        <column name="billing_period_date" var="billing_period_date" />
        <column name="status" var="status" default="visible" />
        <column name="extra_vars" var="extra_vars" default="" />
        <column name="regdate" var="regdate" notnull="notnull" />
	</columns>
</query>