<query id="updateProductImage" action="update">
	<tables>
		<table name="hotopay_product" />
	</tables>
	<columns>
        <column name="product_pic_src" var="product_pic_src" />
        <column name="product_pic_srl" var="product_pic_srl" />
	</columns>
	<conditions>
		<condition operation="equal" column="product_srl" var="product_srl" />
	</conditions>
</query>