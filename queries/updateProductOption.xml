<query id="updateProductOption" action="update">
	<tables>
		<table name="hotopay_product_option" />
	</tables>
	<columns>
        <column name="title" var="title" notnull="notnull" />
        <column name="description" var="description" default="" />
        <column name="price" var="price" notnull="notnull" />
        <column name="status" var="status" notnull="notnull" />
        <column name="extra_vars" var="extra_vars" notnull="notnull" />
        <column name="regdate" var="regdate" notnull="notnull" />
	</columns>
	<conditions>
		<condition operation="equal" column="option_srl" var="option_srl" notnull="notnull" />
	</conditions>
</query>